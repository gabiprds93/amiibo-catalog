.Filters
  padding: 0 1.6rem;

  &__content
    border-radius: 0.8rem;
    box-shadow: 0 3px 8px $color-box-shadow;
    height: 70vh;
    left: 0;
    overflow: auto;
    padding: 1.6rem 2.4rem;
    position: sticky;
    top: 8.8rem;
    width: 27.2rem;

  &__title
    font-size: 1.8rem;
    font-weight: 700;

  &__button
    background-color: $color-white;
    border: none;
    border-radius: 3.2rem;
    box-shadow: 0 0.3rem .8rem $color-box-shadow;
    color: $color-black;
    cursor: pointer;
    font-size: 1.4rem;
    margin-top: 1.6rem;
    opacity: 1;
    outline: none;
    padding: 0.8rem 2.4rem;
    transition: all 0.1s;